<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/notice/sent/:recordId/record_type/:recordType/type/:type" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="isNoticeSent"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/sent_day/:recordId/record_type/:recordType/day/:day/type/:type" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="isNoticeSentByDayNumber"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/sent_week/:recordId/record_type/:recordType/type/:type" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="isNoticeSentWeek"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/sent_month/:recordId/record_type/:recordType/type/:type" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="isNoticeSentMonth"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/sent_year/:recordId/record_type/:recordType/type/:type" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="isNoticeSentYear"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/sent_limit/:recordId/record_type/:recordType/type/:type/count/:count" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="isNoticeSentLimited"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/id/:recordId/record_type/:recordType/type/:type" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="getNoticeByParams"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/delete/:id/" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="deleteNotice"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/status/:id/sent/:sent" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="setNoticeStatusById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/status_by_params/:recordId/record_type/:recordType/type/:type/sent/:sent" method="GET">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="setNoticeStatusByParams"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/add" method="POST">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="createNotice"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/update" method="POST">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="updateNotice"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notice/delete" method="POST">
        <service class="Nans\NoticeStatus\Api\NoticeApiInterface" method="deleteNoticeByParams"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>







